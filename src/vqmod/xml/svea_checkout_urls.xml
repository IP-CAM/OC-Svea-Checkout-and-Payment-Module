    <file path="system/library/url.php">
        <operation>
            <search><![CDATA[public function link($route, $args = '', $secure = false) {]]></search>
            <add position="after"><![CDATA[if ($route=='checkout/checkout') { $route = 'svea/checkout'; }]]></add>
        </operation>
    </file>
