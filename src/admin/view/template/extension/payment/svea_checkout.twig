                                            <option value="1" selected="selected">{{ text_enabled }}</option>
                                            <option value="0">{{ text_disabled }}</option>
                                        {% else %}
                                            <option value="1">{{ text_enabled }}</option>
                                            <option value="0" selected="selected">{{ text_disabled }}</option>
                                        {% endif %}
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label" for="input-coupon-status">{{ entry_coupon_status }}</label>
                                <div class="col-sm-10">
                                    <select name="payment_svea_checkout_coupon_status" id="input-coupon-status" class="form-control">
