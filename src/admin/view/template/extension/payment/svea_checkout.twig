                                            <option value="1" selected="selected">{{ text_enabled }}</option>
                                            <option value="0">{{ text_disabled }}</option>
                                        {% else %}
                                            <option value="1">{{ text_enabled }}</option>
                                            <option value="0" selected="selected">{{ text_disabled }}</option>
                                        {% endif %}
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label" for="input-comments-status">{{ entry_comments_status }}</label>
                                <div class="col-sm-10">
                                    <select name="payment_svea_checkout_comments_status" id="input-comments-status" class="form-control">
                                        {% if payment_svea_checkout_comments_status %}
                                            <option value="1" selected="selected">{{ text_enabled }}</option>
                                            <option value="0">{{ text_disabled }}</option>
                                        {% else %}
                                            <option value="1">{{ text_enabled }}</option>
                                            <option value="0" selected="selected">{{ text_disabled }}</option>
                                        {% endif %}
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label" for="input-newsletter-status">{{ entry_newsletter_status }}</label>
                                <div class="col-sm-10">
                                    <select name="payment_svea_checkout_newsletter_status" id="input-newsletter-status" class="form-control">
                                        {% if payment_svea_checkout_newsletter_status %}
                                            <option value="1" selected="selected">{{ text_enabled }}</option>
                                            <option value="0">{{ text_disabled }}</option>
                                        {% else %}
                                            <option value="1">{{ text_enabled }}</option>
                                            <option value="0" selected="selected">{{ text_disabled }}</option>
                                        {% endif %}
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label" for="input-allow-address-change">{{ entry_allow_address_change }}</label>
                                <div class="col-sm-10">
                                    <select name="payment_svea_checkout_allow_address_change" id="input-allow-address-change" class="form-control">
                                        {% if payment_svea_checkout_allow_address_change %}
                                            <option value="1" selected="selected">{{ text_enabled }}</option>
                                            <option value="0">{{ text_disabled }}</option>
                                        {% else %}
                                            <option value="1">{{ text_enabled }}</option>
                                            <option value="0" selected="selected">{{ text_disabled }}</option>
                                        {% endif %}
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label" for="input-allow-guest">{{ entry_allow_guest }}</label>
                                <div class="col-sm-10">
                                    <select name="payment_svea_checkout_allow_guest" id="input-allow-guest" class="form-control">
                                        {% if payment_svea_checkout_allow_guest %}
                                            <option value="1" selected="selected">{{ text_enabled }}</option>
                                            <option value="0">{{ text_disabled }}</option>
                                        {% else %}
                                            <option value="1">{{ text_enabled }}</option>
                                            <option value="0" selected="selected">{{ text_disabled }}</option>
                                        {% endif %}
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label" for="input-allow-unverified">{{ entry_allow_unverified }}</label>
                                <div class="col-sm-10">
                                    <select name="payment_svea_checkout_allow_unverified" id="input-allow-unverified" class="form-control">
                                        {% if payment_svea_checkout_allow_unverified %}
                                            <option value="1" selected="selected">{{ text_enabled }}</option>
                                            <option value="0">{{ text_disabled }}</option>
                                        {% else %}
                                            <option value="1">{{ text_enabled }}</option>
                                            <option value="0" selected="selected">{{ text_disabled }}</option>
                                        {% endif %}
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="tab-pane" id="tab-widget">
                            <div class="form-group">
                                <label class="col-sm-2 control-label" for="input-widget-total">{{ entry_widget_total }}</label>
                                <div class="col-sm-10">
                                    <input type="text" name="payment_svea_checkout_widget_total" value="{{ payment_svea_checkout_widget_total }}" id="input-widget-total" class="form-control">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label" for="input-widget-status">{{ entry_widget_status }}</label>
                                <div class="col-sm-10">
                                    <select name="payment_svea_checkout_widget_status" id="input-widget-status" class="form-control">
                                        {% if payment_svea_checkout_widget_status %}
                                            <option value="1" selected="selected">{{ text_enabled }}</option>
                                            <option value="0">{{ text_disabled }}</option>
                                        {% else %}
                                            <option value="1">{{ text_enabled }}</option>
                                            <option value="0" selected="selected">{{ text_disabled }}</option>
                                        {% endif %}
                                    </select>
                                </div>
                            </div>
                        </div>
                          <div class="tab-pane" id="tab-information">
                            <div class="form-group">
                                <label class="col-sm-2 control-label">{{ entry_current_version }}</label>
                                <div class="col-sm-10" style="padding-top: 9px;">
                                    {{ current_version }}
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">{{ entry_latest_version }}</label>
                                <div class="col-sm-10" style="padding-top: 9px;">
                                    <a href="{{ download_url }}" target="_blank">
                                        {{ latest_version }}
                                        <i class="fa fa-external-link"></i>
                                    </a>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">{{ entry_support }}</label>
                                <div class="col-sm-10" style="padding-top: 9px;">
                                    <a href="{{ support_url }}" target="_blank">
                                        {{ text_support }}
                                        <i class="fa fa-external-link"></i>
                                    </a>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label" for="input-accept-status">{{ entry_accept_status }}</label>
                                <div class="col-sm-10">
                                    <select name="payment_svea_checkout_accept_status" id="input-accept-status" class="form-control">
                                        {% if payment_svea_checkout_accept_status %}
                                            <option value="1" selected="selected">{{ text_enabled }}</option>
