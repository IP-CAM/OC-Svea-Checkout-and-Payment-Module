{{ header }}
{{ column_left }}
<div id="content">
    <div class="page-header">
        <div class="container-fluid">
            <div class="pull-right">
                <button type="submit" form="form-klarna-account" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary">
                    <i class="fa fa-save"></i>
                </button>
                <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default">
                    <i class="fa fa-reply"></i>
                </a>
            </div>
            <h1>{{ heading_title }}</h1>
            <ul class="breadcrumb">
                {% for breadcrumb in breadcrumbs %}
                    <li>
                        <a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a>
                    </li>
                {% endfor %}
            </ul>
        </div>
    </div>
    <div class="container-fluid">
        {% if error_warning %}
            <div class="alert alert-danger alert-dismissible">
                <i class="fa fa-exclamation-circle"></i> {{ error_warning }}
                <button type="button" class="close" data-dismiss="alert">&times;</button>
            </div>
        {% endif %}
        {% if success %}
            <div class="alert alert-success alert-dismissible">
                <i class="fa fa-check-circle"></i> {{ success }}
                <button type="button" class="close" data-dismiss="alert">&times;</button>
            </div>
        {% endif %}
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">
                    <i class="fa fa-pencil"></i> {{ text_edit }}
                </h3>
            </div>
            <div class="panel-body">
                <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-svea-checkout" class="form-horizontal">
                    <ul class="nav nav-tabs">
                        <li class="active">
                            <a href="#tab-general" data-toggle="tab">{{ tab_general }}</a>
                        </li>
                        <li class="">
                            <a href="#tab-account" data-toggle="tab">{{ tab_account }}</a>
                        </li>
                        <li class="">
                            <a href="#tab-checkout" data-toggle="tab">{{ tab_checkout }}</a>
                        </li>
                        <li class="">
                            <a href="#tab-widget" data-toggle="tab">{{ tab_widget }}</a>
                        </li>
                        <li class="">
                            <a href="#tab-information" data-toggle="tab">{{ tab_information }}</a>
                        </li>
                    </ul>
                    <div class="tab-content">
                        <div class="tab-pane active" id="tab-general">
                            <div class="form-group">
                                <label class="col-sm-2 control-label" for="input-default-country">{{ entry_default_country }}</label>
                                <div class="col-sm-10">
                                    <select name="payment_svea_checkout_default_country" id="input-default-country" class="form-control">
                                        {% for country in countries %}
                                            {% if country.country_id == module_sco_checkout_default_country %}
                                                <option value="{{ country.country_id }}" selected="selected">{{ country.name }}</option>
                                            {% else %}
                                                <option value="{{ country.country_id }}">{{ country.name }}</option>
                                            {% endif %}
                                        {% endfor %}
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label" for="input-force-b2b">{{ entry_force_b2b }}</label>
                                <div class="col-sm-10">
                                    <select name="payment_svea_checkout_force_b2b" id="input-force-b2b" class="form-control">
                                        {% if payment_svea_checkout_force_b2b %}
                                            <option value="1" selected="selected">{{ text_enabled }}</option>
                                            <option value="0">{{ text_disabled }}</option>
                                        {% else %}
                                            <option value="1">{{ text_enabled }}</option>
                                            <option value="0" selected="selected">{{ text_disabled }}</option>
                                        {% endif %}
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label" for="input-test-mode">{{ entry_test_mode }}</label>
                                <div class="col-sm-10">
                                    <select name="payment_svea_checkout_status" id="input-test-mode" class="form-control">
                                        {% if payment_svea_checkout_test_mode %}
                                            <option value="1" selected="selected">{{ text_enabled }}</option>
                                            <option value="0">{{ text_disabled }}</option>
                                        {% else %}
                                            <option value="1">{{ text_enabled }}</option>
                                            <option value="0" selected="selected">{{ text_disabled }}</option>
                                        {% endif %}
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
                                <div class="col-sm-10">
                                    <select name="payment_svea_checkout_status" id="input-status" class="form-control">
                                        {% if payment_svea_checkout_status %}
                                            <option value="1" selected="selected">{{ text_enabled }}</option>
                                            <option value="0">{{ text_disabled }}</option>
                                        {% else %}
                                            <option value="1">{{ text_enabled }}</option>
                                            <option value="0" selected="selected">{{ text_disabled }}</option>
                                        {% endif %}
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="tab-pane" id="tab-account">
                            <ul class="nav nav-tabs" id="country">
                                {% for country in countries %}
                                    <li class="">
                                        <a href="#country-{{ country.id }}" data-toggle="tab">{{ country.name }}</a>
                                    </li>
                                {% endfor %}
                            </ul>
                            <div class="tab-content">
                                {% for country in countries %}
                                    <div class="tab-pane" id="country-{{ country.id }}">
                                        <fieldset>
                                            <legend>{{ text_production }}</legend>
                                            <div class="form-group">
                                                <label class="col-sm-2 control-label" for="input-live-{{ country.code }}-merchant-id">{{ entry_merchant_id }}</label>
                                                <div class="col-sm-10">
                                                    <input type="text" class="form-control"
                                                        id="input-live-{{ country.code }}-merchant-id"
                                                        name="payment_svea_checkout_live_{{ country.code }}_merchant_id"
                                                        value="{{ _context['payment_svea_checkout_live_' ~ country.code ~ '_merchant_id'] }}">
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="col-sm-2 control-label" for="input-">{{ entry_secret_key }}</label>
                                                <div class="col-sm-10">
                                                    <input type="text" class="form-control"
                                                        id="input-live-{{ country.code }}-secret-key"
                                                        name="payment_svea_checkout_live_{{ country.code }}_secret_key"
                                                        value="{{ _context['payment_svea_checkout_live_' ~ country.code ~ '_secret_key'] }}">
                                                </div>
                                            </div>
                                            <legend>{{ text_test_mode }}</legend>
                                            <div class="form-group">
                                                <label class="col-sm-2 control-label" for="input-">{{ entry_merchant_id }}</label>
                                                <div class="col-sm-10">
                                                    <input type="text" class="form-control"
                                                        id="input-test-{{ country.code }}-merchant-id"
                                                        name="payment_svea_checkout_test_{{ country.code }}_merchant_id"
                                                        value="{{ _context['payment_svea_checkout_test_' ~ country.code ~ '_merchant_id'] }}">
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="col-sm-2 control-label" for="input-">{{ entry_secret_key }}</label>
                                                <div class="col-sm-10">
                                                    <input type="text" class="form-control"
                                                        id="input-test-{{ country.code }}-secret-key"
                                                        name="payment_svea_checkout_test_{{ country.code }}_secret_key"
                                                        value="{{ _context['payment_svea_checkout_test_' ~ country.code ~ '_secret_key'] }}">
                                                </div>
                                            </div>
                                        </fieldset>
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                        <div class="tab-pane" id="tab-checkout">
                            <div class="form-group">
                                <label class="col-sm-2 control-label" for="input-discount-status">{{ entry_discount_status }}</label>
                                <div class="col-sm-10">
                                    <select name="payment_svea_checkout_discount_status" id="input-discount-status" class="form-control">
